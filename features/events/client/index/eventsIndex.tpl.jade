.events-index
    h1 Events
    section.commands.navbar-btn
        ul.nav.nav-pills
            li(role='presentation')
                a(href="{{ pathFor 'events.create' }}") Create
    section
        ul
            +each this
                li
                    span #{name}
                    span
                        | (
                        +friendlyDate(date)
                        | )
                    a.link(href="{{ pathFor 'events.edit' }}") Edit
                    a.link(href="{{ pathFor 'events.prizes.index' }}") Prizes
                    a.link(href="{{ pathFor 'feedback.index' }}") Feedback
                    a.link(href="{{ pathFor 'raffle.index' }}") Raffle
